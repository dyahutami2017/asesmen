  } else {
    $("#trauma_listrik_add").hide();
  }
});
$("input[name='mekanisme_trauma']").change(function () {
  if ($(this).val() == "Trauma Zat Kimia") {
    $("#trauma_zat_kimia_add").show();
   } else {
    $("#trauma_zat_kimia_add").hide();
   }
});
$("input[name='mekanisme_trauma']").change(function () {
    if ($(this).val() == "Trauma Lainnya) {
        $("#trauma_lainnya_add").show();
    } else {
        $("#trauma_lainnya_add").hide();
    }
});
$('input[type=radio][name=riwayat_op]]').on('change',() => {
    let parameter = $('input[type=radio][name=riwayat_op]:checked').val();
                  
    if($('input[type=radio][name=]:checked').val() == "Ya"){
        $('#riwayat_op_ya_add').show();
        parameter = $('#riwayat_op_ya_add').val();
    }else{
        $('#riwayat_op_ya_add').hide();
    }
})

