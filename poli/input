$('input[type=radio][name=alasan_kedatangan]').on('change',() => {
    let parameter = $('input[type=radio][name=alasan_kedatangan]:checked').val();
                  
    if($('input[type=radio][name=alasan_kedatangan]:checked').val() == "Rujukan"){
        $('input[name=alasan_kedatangan_rujuk]').show();
        parameter = $('input[name=alasan_kedatangan_rujuk]').val();
    }else{
        $('input[name=alasan_kedatangan_rujuk]').hide();
    }
})

$('input[type=radio][name=kendaraan]').on('change',() => {
    let parameter = $('input[type=radio][name=kendaraan]:checked').val();
                  
    if($('input[type=radio][name=kendaraan]:checked').val() == "Rujukan"){
        $('input[name=kendaraan_nonambulance_add]').show();
        parameter = $('input[name=kendaraan_nonambulance_add]').val();
    }else{
        $('input[name=alasan_kendaraan_nonambulance_add]').hide();
    }
})

$("input[name='mekanisme_trauma']").change(function () {
     if ($(this).val() == "KLL Tunggal") {
     $("#kll_tunggal_add").show();
    } else {
     $("#kll_tunggal_add").hide();
    }
});

$("input[name='mekanisme_trauma']").change(function () {
     if ($(this).val() == "KLL") {
     $("#kll_add").show();
    } else {
     $("#kll_add").hide();
    }
});

$("input[name='mekanisme_trauma']").change(function () {
   if ($(this).val() == "Jatuh dari Ketinggian") {
     $("#jatuh_dari_ketinggian_add").show();
   } else {
     $("#jatuh_dari_ketinggian_add").hide();
   }
});

$("input[name='mekanisme_trauma']").change(function () {
  if ($(this).val() == "Luka Bakar") {
    $("#luka_bakar_add").show();
   } else {
    $("#luka_bakar_add").hide();
   }
});
